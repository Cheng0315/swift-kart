<div class="container">
  <div class="row justify-content-center">
    <div class="col-ml-4">
      <h4 class="text-center sign-up-margin">Edit My Information</h4>
      <%= render partial: 'error_msg', locals: {user_or_item: @user}%>
      <%= form_for @user do |f| %><br>
        <%= render partial: 'user_form', locals: {form: f}%>
        <div class="form-group">
          <%= f.submit value="Update", class: "btn btn-primary btn-block" %><br>
        </div>
      <% end %>
    </div>
  </div>
  <%= render partial: 'items/latest_products', locals: {latest_products: Item.last(3).reverse}%>
</div>