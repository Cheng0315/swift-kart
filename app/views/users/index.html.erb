<div id="carousel" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carousel" data-slide-to="0" class="active"></li>
    <li data-target="#carousel" data-slide-to="1"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item">
      <div class="d-none d-lg-block">
        <div class="slide-box b-padding">
          <%= link_to image_tag("items_images/basketball.png", alt:"First slide"), item_path(1) %>
          <%= link_to image_tag("items_images/football_helmet.png", alt:"First slide"), item_path(1) %>
          <%= link_to image_tag("items_images/baseball_mitt.png", alt:"First slide"), item_path(1) %>
        </div>
      </div>
      <div class="d-none d-md-block d-lg-none">
        <div class="slide-box">
          <%= link_to image_tag("items_images/basketball.png", alt:"First slide"), item_path(1) %>
          <%= link_to image_tag("items_images/baseball_mitt.png", alt:"First slide"), item_path(1) %>
        </div>
      </div>
      <div class="d-none d-sm-block d-md-none">
        <div class="slide-box">
          <%= link_to image_tag("items_images/baseball_mitt.png", alt:"First slide"), item_path(1) %>
        </div>
      </div>
      <div class="d-flex d-sm-none justify-content-center">
        <%= link_to image_tag("items_images/baseball_mitt.png", alt:"First slide"), item_path(1) %>
      </div>
    </div>
    <div class="carousel-item active">
      <div class="d-none d-lg-block">
        <div class="slide-box">
          <%= link_to image_tag("items_images/black_dress.png", alt:"First slide"), item_path(1) %>
          <%= link_to image_tag("items_images/red_dress.png", alt:"First slide"), item_path(1) %>
          <%= link_to image_tag("items_images/clothing.png", alt:"First slide"), item_path(1) %>
          <%= link_to image_tag("items_images/white_sweater.png", alt:"First slide"), item_path(1) %>
        </div>
      </div>
      <div class="d-none d-md-block d-lg-none">
        <div class="slide-box">
        <%= link_to image_tag("items_images/black_dress.png", alt:"First slide"), item_path(1) %>
        <%= link_to image_tag("items_images/red_dress.png", alt:"First slide"), item_path(1) %>
        <%= link_to image_tag("items_images/clothing.png", alt:"First slide"), item_path(1) %>
        </div>
      </div>
      <div class="d-none d-sm-block d-md-none">
        <div class="slide-box">
          <%= link_to image_tag("items_images/black_dress.png", alt:"First slide"), item_path(1) %>
          <%= link_to image_tag("items_images/red_dress.png", alt:"First slide"), item_path(1) %>
        </div>
      </div>
      <div class="d-flex d-sm-none justify-content-center">
      <%= link_to image_tag("items_images/black_dress.png", alt:"First slide"), item_path(1) %>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="index-content" >
  <div class="container">
    <div class="index-content-margin" id="todays-deals-items">
      <h3>Todays Deals</h3>
    </div>
    <div class="row">
      <% @todays_deal.each do |item|%>
        <div class="col-md-4 d-flex align-items-stretch">
          <div class="card">
            <div class="card-body d-flex flex-column">
              <%= link_to image_tag(item.image, class:"card-img-top", alt:"First slide"), item_path(item) %>
              <%= link_to item.name, item_path(item) %>
              <%= truncate(item.description, length: 80) %><br>
              <%= number_to_currency(item.price)%>
              <%= render partial: 'add_item', locals: {item: item}%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

