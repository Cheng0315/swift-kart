

<% if flash[:notice] %>
  <%= flash[:notice] %><br>
<% end %>







  

<div class="container">
  <div id="carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carousel" data-slide-to="0" class="active"></li>
      <li data-target="#carousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="d-none d-lg-block">
          <div class="slide-box b-padding">
            <%= image_tag("items_images/basketball.png", alt:"First slide") %>
            <%= image_tag("items_images/baseball_mitt.png", alt:"First slide") %>
          </div>
        </div>
        <div class="d-none d-md-block d-lg-none">
          <div class="slide-box">
            <%= image_tag("items_images/baseball_mitt.png", alt:"First slide") %>
          </div>
        </div>
        <div class="d-none d-sm-block d-md-none">
          <div class="slide-box">
            <%= image_tag("items_images/baseball_mitt.png", alt:"First slide") %>
          </div>
        </div>
        <div class="d-flex d-sm-none justify-content-center">
          <%= image_tag("items_images/baseball_mitt.png", alt:"First slide") %>
        </div>
      </div>
      <div class="carousel-item">
        <div class="d-none d-lg-block">
          <div class="slide-box">
            <%= image_tag("items_images/black_dress.png", alt:"First slide") %>
            <%= image_tag("items_images/red_dress.png", alt:"First slide") %>
            <%= image_tag("items_images/clothing.png", alt:"First slide") %>
            <%= image_tag("items_images/white_sweater.png", alt:"First slide") %>
          </div>
        </div>
        <div class="d-none d-md-block d-lg-none">
          <div class="slide-box">
          <%= image_tag("items_images/black_dress.png", alt:"First slide") %>
          <%= image_tag("items_images/red_dress.png", alt:"First slide") %>
          <%= image_tag("items_images/clothing.png", alt:"First slide") %>
          </div>
        </div>
        <div class="d-none d-sm-block d-md-none">
          <div class="slide-box">
            <%= image_tag("items_images/black_dress.png", alt:"First slide") %>
            <%= image_tag("items_images/red_dress.png", alt:"First slide") %>
          </div>
        </div>
        <div class="d-flex d-sm-none justify-content-center">
        <%= image_tag("items_images/black_dress.png", alt:"First slide") %>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

