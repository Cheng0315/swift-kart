<% if !current_user || not_seller_item(item.id)%>
  <% if item.in_stock %>
    <div class="mt-auto">
    <%= button_to "Add to cart", items_add_to_cart_path(id: item.id), method: "post", class:"btn btn-sm btn-primary shorter-btn"%>
    </div>
  <% else %>
  <div class="mt-auto text-center">
    Out of stock<br>
    </div>
  <% end %>
<% elsif current_user && item.user_id == current_user.id %>
<div class="mt-auto">
  <%= button_to "Edit Item", edit_item_path(item), method: "get", class:"btn btn-sm btn-primary shorter-btn"%>
</div>
<% end %>