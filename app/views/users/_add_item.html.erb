<% if !current_user || not_seller_item(item.id)%>
  <% if item.in_stock %>
  <div class="btn btn-primary mt-auto">
    <%= link_to 'Add to cart', :controller => 'items', :action => 'add_to_cart', :id => item.id, class: "btn-sm"%><br>
  </div>
    <% else %>
    Out of stock<br>
  <% end %>
<% elsif current_user && item.user_id == current_user.id %>
<div class="btn btn-primary mt-auto">
  <%= link_to 'Edit Item', edit_item_path(item), class: "btn-sm" %><br>
</div>
<% end %>