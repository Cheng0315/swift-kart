<div class="container">
  <div class="row justify-content-center">
    <div class="col-ml-4">
      <h5 class="text-center sign-up-margin">Create an Account</h5>
      <%= render partial: 'error_msg', locals: {user_or_item: @user}%>
      <%= form_for @user do |f| %><br>
        <%= render partial: 'user_form', locals: {form: f}%>
        <div class="custom-control custom-checkbox form-group">
          <%= f.check_box :seller, class: "custom-control-input"%>
          <%= f.label :seller, class: "custom-control-label" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Account", class: "btn btn-primary btn-block" %><br>
        </div>
      <% end %>
    </div>
  </div>
</div>

