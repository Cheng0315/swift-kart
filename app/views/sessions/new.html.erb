<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-7 col-lg-4">
      <h5 class="text-center signin-margin">Sign in to Swift-Kart</h5>
      <% if flash[:notice] %>
        <%= flash[:notice] %><br>
      <% end %>
      <%= form_tag ('/signin') do%>
        <div class="form-group">
          <%= text_field_tag :email, "",placeholder: "Email", class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, "", placeholder: "Password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= submit_tag value='Sign In', class: "btn btn-primary btn-block"%>
        </div>
      <% end %>
      <div class="text-center" ><%= link_to('Sign in with Facebook', '/auth/facebook', class: "btn btn-success btn-block") %></div>
      <div class="text-center mt-2" ><%= link_to("Don't have an account? Sign up" , '/signup') %></div> 
      <div class="text-center made-with-love">Made with <i class="fas fa-heart"></i> by Cheng Vue</div>
    </div>
  </div>
</div>