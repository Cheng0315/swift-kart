<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <h4 class="text-center sign-up-margin">Sign In</h4>
      <% if flash[:notice] %>
        <%= flash[:notice] %><br>
      <% end %>
      <%= form_tag ('/signin') do%>
        <div class="form-group">
          <%= label_tag :email %><br>
          <%= text_field_tag :email, "",placeholder: "Email", class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= label_tag :password %><br>
          <%= password_field_tag :password, "", placeholder: "Password", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= submit_tag value='Sign In',  class: "btn btn-primary btn-block"%>
        </div>
      <% end %>
      <div class="text-center" ><%= link_to('Sign in with Facebook', '/auth/facebook') %></div>
    </div>
  </div>
</div>