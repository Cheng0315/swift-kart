<% if @items.empty? %>
  You have no buyer at the moment
<% else %>
  <% @items.each do |item|%>
    <%= link_to item[0].name, item_path(item[0]) %><br>
    Buyer Name: <%= item[1] %>
    Quantity: <%= item[2] %>
    <% if item_is_shipped(item[3], item[0]) %>
      Shipped<br>
    <% else%>
      <%= link_to 'Mark as shipped', ship_items_path(cart_id: item[3], item_id: item[0]) %><br>
    <% end%>
  <% end %>
<% end %>