<div class="form-group">
  <%= form.text_field :name, placeholder: "Name", class: "form-control" %>
</div>
<div class="form-group">
  <%= form.number_field :price, class: :text_field, step: :any, placeholder: "Price", class: "form-control" %>
</div>
<div class="form-group">
  <%= form.text_area :description, rows: "3", placeholder: "Description", class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :category %>
  <%= form.collection_select :category_id, Category.all, :id, :name, {}, {:class => 'custom-select'}%>
</div>
<div class="form-group">
  <%= form.label :condition %>
  <%= form.select :condition, options_for_select([['New', 1], ['Used', 2]]), {}, {:class => 'custom-select'}%>
</div>
<div class="form-group">
  <%= form.label :availability %>
  <%= form.select :in_stock, options_for_select([['In stock', true], ['Out of Stock', false]]), {}, {:class => 'custom-select'}%>
</div>
<div class="form-group">
  <%= form.file_field :image %>
</div>
