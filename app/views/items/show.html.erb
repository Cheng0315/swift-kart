<div class="container">
  <div class="row" id="show-image-info">
    <div class="col-md-5 mt-auto">
      <a data-target="#modal_img" data-toggle="modal" href="#">
				<div class="ba-0 tp-s">
          <%= item_image(@item.id) %>
        </div>	
      </a>
      <div aria-hidden="true" class="modal fade " id="modal_img" role="dialog" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-body mb-0 p-0">
              <%= item_image(@item.id) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-7 ">
      <h5><%= @item.name %></h5>
      <hr>
      <%= item_condition(@item)%>
      <p>Price: <strong class="price" ><%= number_to_currency(@item.price) %></strong></p>
      <p class="item-overall-rating"><%= item_overall_rating(@item).html_safe %><%= reviews_link(@item, @reviews).html_safe %></p>
      <p><%= @item.description %></p>
      Availability: <%= item_availability(@item) %>
      <p>Sold by: <%= @item.user.first_name %> <%= @item.user.last_name %></p>
      <%= render partial: 'users/short_add_item_btn', locals: {item: @item}%>
      <% if current_user && @item.user_id == current_user.id %>
        <%= button_to "Delete Item", item_path(@item), method: "delete", data: {confirm: "Are you sure?"}, class:"btn btn-sm btn-primary shorter-btn"%>
      <% end %>
    </div>
  </div>
  <div id="list-reviews">
    <h3 id="reviews">Reviews</h3>
    <% if !@reviews.blank? %>
      <% @reviews.each do |review|%>
        <div><i class="fas fa-user fa-lg"></i> <%= review.user.first_name %> <%= review.user.last_name %></div>
        <div class="users-rating"><%= display_stars_rating(review.rating).html_safe %></div>
        <div><%= review.created_at.strftime("%B %d, %Y") %></div>
        <div><%= review.comment %></div>
      <% end %>
    <% end %>
  </div>
  <% if current_user && current_user_bought_the_item(@item.id) %>
    <%= form_for ([@item, @new_review]), html: {id: "dynamic_submit_form"} do |f| %>
      <div class='rating-stars' data-rating="">
        <h6>Overall Rating</h6>
        <ul id='stars'>
          <li class='star' title='Poor' data-value='1'>
            <i class='fa fa-star fa-fw'></i>
          </li>
          <li class='star' title='Fair' data-value='2'>
            <i class='fa fa-star fa-fw'></i>
          </li>
          <li class='star' title='Good' data-value='3'>
            <i class='fa fa-star fa-fw'></i>
          </li>
          <li class='star' title='Excellent' data-value='4'>
            <i class='fa fa-star fa-fw'></i>
          </li>
          <li class='star' title='Amazing' data-value='5'>
            <i class='fa fa-star fa-fw'></i>
          </li>
        </ul>
      </div>
      <%= f.hidden_field :rating, :value => ""%>
      <h6><%= f.label :comment %></h6>
      <%= f.text_area :comment %><br>
      <%= f.submit 'Submit Review'%><br>
    <% end %>
    <% end %>
  <%= render partial: 'latest_products', locals: {latest_products: Item.last(3).reverse}%>
</div>