<div class="container">
  <div style="width:400px; height:auto">
    <%= item_image(@item.id) %>
  </div>
  Name: <%= @item.name %><br>
  Price: <%= number_to_currency(@item.price) %><br>
  Description: <%= @item.description %><br>
  Availability: <%= item_availability(@item) %><br>
  Sold by: <%= @item.user.first_name %> <%= @item.user.last_name %><br>
  Condition: <%= item_condition(@item)%> <br>
  <%= render partial: 'users/add_item', locals: {item: @item}%>
  <% if current_user && @item.user_id == current_user.id %>
  <%= button_to "Delete Item", item_path(@item), method: "delete", data: {confirm: "Are you sure?"}, class:"btn btn-sm btn-block btn-primary"%>
  <% end %>
</div>