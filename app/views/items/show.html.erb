<div class="container">
  <div class="row" id="show-image-info">
    <div class="col-md-5">
      <%= item_image(@item.id) %>
    </div>

    <div class="col-md-7">
      

      <h5><%= @item.name %></h5>
      <hr>
      <p class="condition text-center" ><%= item_condition(@item)%></p>
      <p>Price: <strong class="price" ><%= number_to_currency(@item.price) %></strong></p>
      <p class="stars-color"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i></p>
      <p><%= @item.description %></p>
      <p>Availability: <strong class="availability" ><%= item_availability(@item) %></strong></p>
      <p>Sold by: <%= @item.user.first_name %> <%= @item.user.last_name %></p>
      
      <%= render partial: 'users/add_item', locals: {item: @item}%>
      <% if current_user && @item.user_id == current_user.id %>
        <%= button_to "Delete Item", item_path(@item), method: "delete", data: {confirm: "Are you sure?"}, class:"btn btn-sm btn-block btn-primary"%>
      <% end %>
    </div>
  </div>
</div>

<section class="container">
  <div class="latest-products" id="todays-deals-items">
    <h3>Latest Products</h3>
  </div>
  <div class="row">
    <% @latest_products.each do |item|%>
      <div class="col-md-4 d-flex align-items-stretch">
        <div class="card">
          <div class="card-body d-flex flex-column">
            <%= link_to item_image(item.id), item_path(item) %>
            <%= link_to item.name, item_path(item) %>
            <%= truncate(item.description, length: 80) %><br>
            <%= number_to_currency(item.price)%>
            <%= render partial: 'users/add_item', locals: {item: item}%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>