<% if flash[:notice] %>
  <%= flash[:notice] %><br>
<% end %>

  <div>
    <% if my_carts_are_empty(@carts) %>
      You have not make any orders
    <% else %>
      <% @carts.each do |cart|%>
        <% if cart.checkout %>
          <% cart.items.each do |item| %>
            <%= link_to item.name, item_path(item) %>
            Price: <%= number_to_currency(item.price) %>
            Description: <%= item.description %>
            Quantity: <%= item_quantity(item, cart) %>
            Status: <%= item_status(item, cart)%>
            <%= button_to "Buy again", items_add_to_cart_path(id: item.id, :redirect_to => my_orders_path), method: "post", class:"btn btn-sm btn-block btn-primary"%>
          <%end%> 
        <% end %> 
      <% end %>
    <%end%>
  </div>
