<% if @items.empty? %>
  Unable to find the item you're looking for
<% else %>
  <% @items.each do |item|%>
    <%= link_to item.name, item_path(item) %>
    <% if current_user %> 
      <% if item.user.id != current_user.id %>
      <%= link_to 'Add to cart', :controller => 'items', :action => 'add_to_cart', :id => item.id, :redirect_to => cart_path %><br>
      <%end%><br>
    <%end%>
  <% end %>
<% end %>