<% if @items.empty? && @view_my_items %>
  You have no items for sale at the moment
<% elsif @items.empty? && @view_buyer_items %>
  You have no buyer at the moment
<% elsif @items.empty? %>
  Unable to find the item you're looking for
<% else %>
  <% @items.each do |item|%>
    <%= link_to item.name, item_path(item) %><br>
    <% if !current_user || not_seller_item(item.id)%>
      <%= link_to 'Add to cart', :controller => 'items', :action => 'add_to_cart', :id => item.id, :redirect_to => cart_path %><br>
    <% elsif current_user && item.user_id == current_user.id %>
      <%= link_to 'Edit Item', edit_item_path(item) %><br>
    <% end %>
  <% end %>
<% end %>