


<div >
  <% if @items.empty? && @view_my_items %>
    You have no items for sale at the moment
  <% elsif @items.empty? %>
    Unable to find the item you're looking for
  <% else %>
    <% @items.each do |item|%>
      <%= link_to item.name, item_path(item) %><br>
      <% if !current_user || not_seller_item(item.id)%>
        <% if item.in_stock %>
          <%= form_tag items_add_to_cart_path(id: item.id, :redirect_to => cart_path)  do  %>
            <%= submit_tag value="Add to cart"%><br>
          <%end%>
        <% else %>
          Out of stock<br>
        <% end %>
      <% elsif current_user && item.user_id == current_user.id %>
        <%= form_tag edit_item_path(item), method: "get"  do  %>
          <%= submit_tag value="Edit Item"%><br>
        <%end%>
      <% end %>
    <% end %>
  <% end %>
</div>
