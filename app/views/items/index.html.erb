<div class="container">
  <% if @items.empty? && @view_my_items %>
    You have no items for sale at the moment
  <% elsif @items.empty? %>
    Unable to find the item you're looking for
  <% else %>
      <div class="row">
        <% @items.each do |item|%>
          <div class="col-md-4 d-flex align-items-stretch">
              <div class="card">
                <div class="card-body d-flex flex-column" >
                  <%= link_to item_image(item.id), item_path(item) %>
                  <%= link_to item.name, item_path(item) %>
                  <%= truncate(item.description, length: 80) %><br>
                  <%= number_to_currency(item.price)%>
                  <%= render partial: 'users/add_item', locals: {item: item}%>
                </div>
              </div>
            </div>
      <% end %>
    </div>
  <%end%>
</div>

